<h1>Listing scodes</h1>

<table>
  <thead>
    <tr>
      <th>Scode</th>
      <th>Sname</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scodes.each do |scode| %>
      <tr>
        <td><%= scode.scode %></td>
        <td><%= scode.sname %></td>
        <td><%= link_to 'Show', scode %></td>
        <td><%= link_to 'Edit', edit_scode_path(scode) %></td>
        <td><%= link_to 'Destroy', scode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

